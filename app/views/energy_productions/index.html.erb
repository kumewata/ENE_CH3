<h1>EnergyProductions#index</h1>
<%= debug(params) if Rails.env.development? %>
<% @label_list_check.each do |c| %>
  <%= c %>
<% end %>

<canvas id="Chart2" width="450" height="200"></canvas>
<canvas id="Chart1" width="450" height="200"></canvas>

<script>
var labels_t = gon.label_list_t;
var ctx1 = document.getElementById("Chart1").getContext('2d');
var Chart1 = new Chart(ctx1, {
    type: 'line',
    data: {
        labels: labels_t,
        datasets: [
            {
            label: "London",
            data: <%= @energy_production_hash['data']['London'] %>,
            backgroundColor: 'rgba(255, 99, 132, 1.0)',
            borderColor: 'rgba(255, 50, 132, 1.0)',
            fill: false
            },
            {
            label: "Cambridge",
            data: <%= @energy_production_hash['data']['Cambridge'] %>,
            backgroundColor: 'rgba(99, 255, 132, 1.0)',
            borderColor: 'rgba(50, 255, 132, 1.0)',
            fill: false
            },
            {
            label: "Oxford",
            data: <%= @energy_production_hash['data']['Oxford'] %>,
            backgroundColor: 'rgba(99, 132, 255, 1.0)',
            borderColor: 'rgba(50, 132, 255, 1.0)',
            fill: false
            },
        ]
    },
    options: {
        title:  {
          display: true,
          text: "Energy Production (Average, per house) trend by Cities"
        }
    }
});

var labels_t2 = gon.city_list_t;
var data_t2 = gon.house_count_t;
var ctx2 = document.getElementById("Chart2").getContext('2d');
var Chart2 = new Chart(ctx2, {
    type: 'bar',
    data: {
      labels: labels_t2,
    //   labels: ["1", "2", "3"],
      datasets: [{
          data: data_t2,
          label: "Number of house",
          //背景色
          backgroundColor: "rgba(75,192,192,0.4)",
          //枠線の色
          borderColor: "rgba(75,192,192,1)",
      }]
    },
    options: {
        title:  {
          display: true,
          text: "Number of house by Cities"
        },
        // 軸の設定
      scales: {
          //縦軸の設定
          yAxes: [{
　　　　　　　　　//目盛りの設定
              ticks: {
                  //開始値を0にする
                  beginAtZero:true,
              }
          }]
      }
    }
});
</script>